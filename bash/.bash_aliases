#default options
alias ls='ls --color=always --group-directories-first'

alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'
alias less='less -R'

# Utilities
alias ll='ls -alF'
alias lll='ll | less'
alias la='ls -A'
alias l='ls -CF'

alias fred='make -f Fredfile'
alias timestamp='date -u +%Y%m%d%H%M%S'

# edit shortcuts
alias vibashrc='vi ~/.bashrc'

# directories shortcuts
alias ngscr='cd ~/dvlp/ngScreener/'
alias ngint='cd ~/dvlp/ngIntegration/'


